@model Product
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    <h1>AddStock</h1>

    <div>
        <form method="post" asp-controller="Admin" asp-action="AddStock">
            <div>
                <div class="col-md-6 col-md-offset-3">
                    <div class="jumbotron">
                        <div class="form-group">
                            <label asp-for="ProductCode"></label>
                            <input asp-for="ProductCode" id="txtProdCode" />
                            <span asp-validation-for="ProductName"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ProductName"></label>
                            <input asp-for="ProductName" id="txtProdName" />
                            <span asp-validation-for="ProductName"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Price"></label>
                            <input asp-for="Price" id="txtPrice" />
                            <span asp-validation-for="Price"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="MinQuantity"></label>
                            <input asp-for="MinQuantity" id="txtMinQty" />
                            <span asp-validation-for="MinQuantity"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Quantity"></label>
                            <input asp-for="Quantity" id="txtQty" />
                            <span asp-validation-for="@Model.Quantity"></span>
                        </div>
                        <div id="error-message">@ViewBag.Success</div>
                        <div id="error-message">@ViewBag.Error</div>
                        <input type="submit" value="Add" id="btnAdd" />
                    </div>
                </div>
            </div>
        </form>
    </div>
}
