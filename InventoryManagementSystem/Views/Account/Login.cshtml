@model InventoryManagementSystem.Models.User
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Login</h2>
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <div class="jumbotron">
            <form method="post" asp-controller="Account" asp-action="Login">
                <div class="form-group">
                    <label asp-for="UserName"></label>
                    <input type="text" asp-for="UserName" id="username" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input type="password" asp-for="Password" id="password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div id="error-message">
                    @ViewBag.username
                </div>
                <input type="submit" value="Login" id="login" class="btn btn-info btn-block" />
            </form>
        </div>
    </div>
</div>
